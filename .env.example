# SemOps Environment Configuration
# Copy this file to .env and fill in your actual values

# =============================================================================
# SUPABASE CONFIGURATION
# =============================================================================
# Get these from your Supabase project dashboard > Settings > API

# Supabase Project URL (https://your-project-id.supabase.co)
SUPABASE_URL=https://your-project-id.supabase.co

# Supabase Anon Key (public key for client-side access)
SUPABASE_ANON_KEY=your_anon_key_here

# Supabase Service Role Key (admin key for server-side operations)
SUPABASE_SERVICE_ROLE_KEY=your_service_role_key_here

# Database Direct Connection (for migrations, admin tasks)
DATABASE_URL=postgresql://postgres:your_password@db.your-project-id.supabase.co:5432/postgres

# =============================================================================
# BLOG-GERATROR INTEGRATION (for future Phase 2)
# =============================================================================

# AI Model API Keys
ANTHROPIC_API_KEY=your_claude_api_key
GEMINI_API_KEY=your_gemini_api_key

# GitHub Integration
GITHUB_TOKEN=your_github_token
GITHUB_REPO=your-username/semops-core

# Google Drive Integration  
GOOGLE_DRIVE_FOLDER_ID=your_google_drive_folder_id

# =============================================================================
# DEVELOPMENT CONFIGURATION
# =============================================================================

# Environment (development, staging, production)
NODE_ENV=development

# Enable debug logging
DEBUG=true

# Schema version to validate against
EXPECTED_SCHEMA_VERSION=1.0.0

# =============================================================================
# LINEAGE TRACKING CONFIGURATION
# =============================================================================

# Enable/disable lineage event logging to /lineage/events.ndjson
# Set to 'false' during active development to reduce noise from small changes
# Set to 'true' in production or when you want full audit trails
ENABLE_LINEAGE_TRACKING=false

# Lineage tracking modes:
#   full     - Log all events (entity changes, deliveries, edges, etc.)
#   minimal  - Log only major events (publishes, ingestions, major derivations)
#   off      - Disable all lineage logging (same as ENABLE_LINEAGE_TRACKING=false)
LINEAGE_TRACKING_MODE=minimal

# =============================================================================
# OPTIONAL: VECTOR/RAG CONFIGURATION (Phase 3)
# =============================================================================

# Vector Database
PINECONE_API_KEY=your_pinecone_api_key
PINECONE_INDEX_NAME=semops-knowledge

# Embeddings Provider
OPENAI_API_KEY=your_openai_api_key

# =============================================================================
# SEMOPS DATABASE CONNECTION (used by scripts, agents, consuming repos)
# =============================================================================
# Direct PostgreSQL access, bypasses Supavisor pooler.
# These are read by scripts/db_utils.py. Falls back to POSTGRES_* if not set.

SEMOPS_DB_HOST=localhost
SEMOPS_DB_PORT=5434
SEMOPS_DB_NAME=postgres
SEMOPS_DB_USER=postgres
SEMOPS_DB_PASSWORD=your_postgres_password
SEMOPS_DB_SCHEMA=public

# =============================================================================
# QDRANT VECTOR DATABASE
# =============================================================================

SEMOPS_QDRANT_HOST=localhost
SEMOPS_QDRANT_PORT=6333

# =============================================================================
# DOCKER/CONTAINER CONFIGURATION
# =============================================================================

# Port for local development server
PORT=3000

# Container timezone
TZ=UTC